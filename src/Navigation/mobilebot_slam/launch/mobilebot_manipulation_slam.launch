<launch>
  <!-- Arguments -->
  <arg name="model" default="waffle_pi" doc="model type [ustbot, burger, waffle, waffle_pi]"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
  <arg name="configuration_basename" default="mobilebot_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>

  <!-- mobilebot -->

  <arg name="urdf_file" default="$(find xacro)/xacro --inorder '$(find mobilebot_manipulation_description)/urdf/mobilebot_manipulation_robot.urdf.xacro'" />
  <param name="robot_description" command="$(arg urdf_file)" />

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="50.0" />
  </node>

  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter" output="screen" >
    <rosparam command="load" file="$(find mobilebot_manipulation_tools)/config/scan_data_filter.yaml" />
  </node>

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
  <include file="$(find mobilebot_slam)/launch/mobilebot_$(arg slam_methods).launch">
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find mobilebot_slam)/rviz/mobilebot_$(arg slam_methods).rviz"/>
  </group>
</launch>
